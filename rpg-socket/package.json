{
  "name": "@rpg-engine/server",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "yarn install && ts-node-dev --ignore-watch ./node_modules --transpile-only --respawn -r dotenv/config ./src/server.ts",
    "build": "tsc -p .",
    "format": "prettier --write . --loglevel silent",
    "check-formatting": "prettier --check 'src/**/*.ts'",
    "tsc": "tsc -p .",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "start": "yarn install && yarn build && node ./dist/server.js"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.4.2",
    "@types/node-cron": "^3.0.1",
    "@types/uuid": "^8.3.4",
    "inversify": "^6.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "jest": "^27.5.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.0-dev.20220116"
  },
  "dependencies": {
    "@geckos.io/server": "^2.1.6",
    "@rpg-engine/shared": "^0.0.5",
    "babel-jest": "^27.5.1",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.1.3",
    "uuid": "^8.3.2"
  }
}
