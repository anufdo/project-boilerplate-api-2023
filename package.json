{
  "name": "@rpg-engine/api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "test": "yarn jest --silent test",
    "test:debug": "yarn jest test",
    "test:coverage": "yarn jest --silent --coverage",
    "test:config": "yarn jest --showConfig test",
    "dev": "yarn install && ts-node-dev --transpile-only --inspect=0.0.0.0:9229 --respawn -r tsconfig-paths/register ./src/server.ts",
    "build": "tsc -p .",
    "update:shared-deps": "yarn add @rpg-engine/shared",
    "lint": "eslint --fix ./src/**/*.ts",
    "start:prod": "yarn install && yarn build && pm2 start pm2.json --no-daemon",
    "format": "prettier --write . --loglevel silent",
    "check-formatting": "prettier --check 'src/**/*.ts'",
    "bootstrap": "git pull origin master && yarn install && yarn configure",
    "env:switch:dev": "./environment/env-switch.sh dev",
    "env:switch:prod": "./environment/env-switch.sh prod",
    "configure:first-time": "./environment/first-time-setup.sh",
    "configure": "./environment/configure.sh",
    "db:export": "./environment/db-export.sh",
    "db:import": "./environment/db-import.sh",
    "db:download": "./environment/db-download.sh",
    "cache:clear": "sudo rm -rf ./src/providers/data/cache/**",
    "check:unused:dependencies": "yarn depcheck"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn build && yarn lint && yarn test",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@amplitude/identify": "^1.8.2",
    "@amplitude/node": "^1.8.3",
    "@geckos.io/server": "^2.1.8",
    "@sendgrid/mail": "^7.4.0",
    "@sentry/node": "^6.13.2",
    "@sentry/tracing": "^6.13.2",
    "@socket.io/pm2": "^5.1.0",
    "axios": "^0.21.0",
    "axios-cache-adapter": "^2.7.3",
    "cachegoose": "^8.0.0",
    "compression": "^1.7.4",
    "countries-cities": "^0.0.11",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "googleapis": "^64.0.0",
    "ioredis": "^4.28.2",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.4",
    "mixpanel": "^0.13.0",
    "mongoose": "^5.12.3",
    "mongoose-paginate-v2": "^1.4.2",
    "mongoose-query-parser": "^1.2.1",
    "number-string": "^1.1.5",
    "pathfinding": "^0.4.18",
    "sleep-promise": "^9.1.0",
    "socket.io": "^4.4.1",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@rpg-engine/shared": "^0.2.23",
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.165",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.11.5",
    "@types/pathfinding": "^0.0.5",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "apicache-plus": "^2.2.2",
    "babel-jest": "^27.5.1",
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "crypto-random-string": "^3.3.0",
    "cryptr": "^6.0.2",
    "dayjs": "^1.10.4",
    "depcheck": "^1.4.3",
    "dotenv": "^8.2.0",
    "eslint": "^7.13.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^9.6.0",
    "google-auth-library": "^7.0.4",
    "husky": "^4.3.0",
    "inversify": "^5.1.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.3.2",
    "jest": "^27.5.1",
    "lodash": "^4.17.20",
    "moment-timezone": "^0.5.32",
    "mongodb-memory-server": "^8.4.1",
    "mongoose-hidden": "^1.9.0",
    "mongoose-unique-validator": "2.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^2.0.3",
    "pluralize": "^8.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "root-path": "^0.2.1",
    "route-cache": "^0.4.5",
    "sib-api-v3-sdk": "^8.0.2",
    "ts-jest": "^27.1.3",
    "ts-mongoose": "^0.0.21",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.7.0-dev.20220311"
  }
}
